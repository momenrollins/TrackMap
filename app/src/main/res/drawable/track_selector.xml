<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="@dimen/_24sdp" android:height="@dimen/_10sdp"/>
            <solid android:width="@dimen/_1sdp" android:color="#4cd964"/>
            <corners android:radius="@dimen/_50sdp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="@dimen/_24sdp" android:height="@dimen/_10sdp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="@dimen/_1sdp" android:color="@color/color_white_60_opacity"/>
            <corners android:radius="@dimen/_50sdp"/>
        </shape>
    </item>
</selector>